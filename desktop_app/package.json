{
  "name": "welto-pos-desktop",
  "version": "10.0.10",
  "description": "WELTO Point of Sale - Solution complète par Aliou Diallo",
  "main": "src/main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:portable": "electron-builder --win --config.portable=true",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "pos",
    "point-of-sale",
    "retail",
    "desktop"
  ],
  "author": "Aliou Diallo - Ingénieur IA",
  "license": "MIT",
  "build": {
        "appId": "com.welto.pos.desktop",
        "productName": "WELTO",
        "directories": {
            "output": "dist",
            "buildResources": "assets"
        },
        "publish": {
            "provider": "github",
            "owner": "kossaiRedou",
            "repo": "welto-distribution",
            "releaseType": "release"
        },
        "forceCodeSigning": false,
        "afterSign": null,
    "files": [
      "src/**/*",
      "assets/**/*",
      "!node_modules/.cache/**/*"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": ".",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/logo.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/logo.ico",
      "uninstallerIcon": "assets/logo.ico",
      "installerHeaderIcon": "assets/logo.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "WELTO",
      "displayLanguageSelector": false,
      "deleteAppDataOnUninstall": false,
      "perMachine": false,
      "allowElevation": false
    },
    "portable": {
      "artifactName": "WELTO-Portable.exe"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-log": "^4.4.8",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.7.3"
  }
}
